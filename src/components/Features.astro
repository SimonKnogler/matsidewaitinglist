<style>
  /* Bento Grid Layout */
  .bento-grid {
    display: grid;
    gap: 1rem;
    grid-template-columns: 1fr;
  }
  
  /* Tablet: 2 columns */
  @media (min-width: 768px) {
    .bento-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.25rem;
    }
    
    .bento-scheduling {
      grid-column: span 1;
    }
    
    .bento-leaderboard {
      grid-column: span 1;
    }
  }
  
  /* Desktop: Complex bento layout */
  @media (min-width: 1024px) {
    .bento-grid {
      grid-template-columns: 1.2fr 1fr 1fr;
      grid-template-rows: auto auto;
      gap: 1.25rem;
    }
    
    .bento-scheduling {
      grid-column: 1;
      grid-row: span 2;
    }
    
    .bento-progress {
      grid-column: 2;
      grid-row: 1;
    }
    
    .bento-journal {
      grid-column: 3;
      grid-row: 1;
    }
    
    .bento-leaderboard {
      grid-column: 2;
      grid-row: 2;
    }
    
    .bento-gym {
      grid-column: 3;
      grid-row: 2;
    }
    
    .bento-ratings {
      display: none;
    }
  }
  
  /* Show ratings card on smaller screens */
  @media (max-width: 1023px) {
    .bento-ratings {
      display: block;
    }
  }
</style>
